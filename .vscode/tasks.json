{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cmake",
      "label": "CMake: build",
      "command": "build",
      "targets": ["all", "--verbose"],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": "build",
      "problemMatcher": [],
      "detail": "CMake build task"
    },
    {
      "type": "shell",
      "label": "jlink-flash",
      "command": "D:/Soft/JLink_V796k/jlink",
      "args": [
        "-device",
        "STM32F407VE",
        "-if",
        "SWD",
        "-speed",
        "4000",
        "-CommanderScript",
        "${workspaceFolder}/stm32-practical/commandfile.jlink"
      ],
      "dependsOn": "CMake: build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Builds project and flashes firmware."
    }
  ]
}
